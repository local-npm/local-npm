{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "env": {
        "node": true,
        "mocha": true,
        "es6": true,
        "browser": true
    },
    "rules": {
        "no-constant-condition": 0
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "16"
        }
    }
}
